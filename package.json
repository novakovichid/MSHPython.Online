{
  "name": "mshp-ide",
  "private": true,
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "c8": "^10.1.3",
    "jsdoc": "^4.0.5"
  },
  "scripts": {
    "test": "playwright test",
    "test:unit": "node --test tests/unit/*.test.mjs",
    "test:unit:coverage": "c8 -r text -r lcov node --test tests/unit/*.test.mjs",
    "docs:api": "jsdoc -c jsdoc.json",
    "docs:api:check": "node scripts/check-api-docs.mjs /tmp/jsdoc-report.json"
  }
}
